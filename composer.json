{
    "scripts": {
        "test": "phpunit",
        "check": "php-cs-fixer fix --dry-run",
        "fix": "php-cs-fixer fix"
    },
    "require": {
        "symfony/yaml": "^4.1",
        "symfony/console": "4.2.x-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "php-coveralls/php-coveralls": "^2",
        "friendsofphp/php-cs-fixer": "^2"
    },
    "autoload": {
        "psr-4": {
            "dcgen\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "dcgen\\test\\": "tests/"
        }
    },
    "minimum-stability": "dev"
}
